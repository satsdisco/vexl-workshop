// PostgreSQL schema for Vercel Postgres
// Copy this to schema.prisma after setting up Vercel Postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection for migrations
}

// Main content model for slide text content
model SlideContent {
  id          String   @id @default(cuid())
  sectionId   String   @unique
  title       String?
  subtitle    String?
  description String?
  cta         String?
  content     String   @db.Text // JSON string for flexible content
  version     Int      @default(1)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Component-specific data (contacts, businesses, skills, etc.)
model ComponentData {
  id            String   @id @default(cuid())
  componentId   String   @unique
  componentType String
  data          String   @db.Text // JSON array of items
  config        String   @db.Text // JSON configuration object
  toggles       String   @db.Text // JSON toggles object
  version       Int      @default(1)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Global configuration for the presentation
model GlobalConfig {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text // JSON value
  category    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Media assets (images, icons, screenshots)
model MediaAsset {
  id        String   @id @default(cuid())
  filename  String
  url       String
  type      String
  alt       String?
  section   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Preset templates for different audiences
model PresetTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  config      String   @db.Text // JSON configuration
  slides      String   @db.Text // JSON slide configurations
  components  String   @db.Text // JSON component configurations
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Feature toggles for sections and components
model FeatureToggle {
  id        String   @id @default(cuid())
  feature   String   @unique
  enabled   Boolean  @default(true)
  section   String?
  config    String?  @db.Text // JSON additional configuration
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Feature configuration for workshop features
model FeatureConfig {
  id          String   @id @default(cuid())
  featureId   String   @unique
  name        String
  description String
  enabled     Boolean  @default(true)
  section     String?
  settings    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Content versions for rollback capability
model ContentVersion {
  id         String   @id @default(cuid())
  entityType String
  entityId   String
  content    String   @db.Text // JSON snapshot of content
  version    Int
  createdBy  String   @default("admin")
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
}

// Admin session management
model AdminSession {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Workshop sections for visual editor
model WorkshopSection {
  id        String   @id @default(cuid())
  sectionId String   @unique
  name      String
  content   Json
  duration  Int
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}